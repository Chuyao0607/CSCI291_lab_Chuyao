    printf("enter your choice: ");
    scanf("%d",&choice);
    switch(choice);
    case 1:
    printf("Espresso %.2fAED\n",Espresso_price);
    break;
    case 2:
    printf(" Cappuccino %.2fAED\n",Capppuccino_price);
    break;
    case 3:
    printf("Mocha %.2fAED\n",Mocha_price);
    break;
    default:
    puts("come back");
    break;
    printf("please confirm your option. your ordered option%d\n",choice);

        if (choice==1){ 
            bean=bean-Espresso_bean;
            water=water-Espresso_water;
            milk=milk;
            chocolate=chocolate-Espresso_chocolate;
            if(bean<=bean_lowthreshold || water<=water_threshold || milk<=milk_threshold || chocolate<=chocolate_threshold)
            printf("these materials are not enough.\n");
            puts("please contact with our stuffs");
            float payment;
            printf("enter your coins 1AED||0.5AED: ");
            scanf("%.2f",&payment);
            float payment=rest;
            payment_rest=Espresso_price-payment;
            if(payment<==3.5){
                printf("please comtinue inserting %.2fAED\n",payment_rest);
            }
            if(payment==3.5){
                total_amount += Espresso_price;
                puts("finish");
            }         
        }
        if (choice==2){
            bean=bean-Cappuccino_bean;
            water=water-Cappuccino_water;
            milk=milk-Cappuccino_milk;
            chocolate=chocolate-Cappuccino_chocolate;
            if(bean<=bean_lowthreshold || water<=water_threshold || milk<=milk_threshold || chocolate<=chocolate_threshold)
            printf("these materials are not enough.\n");
