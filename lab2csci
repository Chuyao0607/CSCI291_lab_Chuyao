return 0;
}
void change_price(){
    int new_price;
    int coffee_change;
    printf("which coffee's price you want to change?Espresso(1) Cappuccino(2) Mocha(3)\n");
    printf("enter coffee number: ");
    scanf("%d",&coffee_change);

    switch(coffee_change){
        case 1:
        printf("enter new price: ");
        scanf("%d",&new_price);
        Espresso_price=new_price;
        break;
        case 2:
        printf("enter new price: ");
        scanf("%d",&new_price);
        Capppuccino_price=new_price;
        break;
        case 3:
        printf("enter new price: ");
        scanf("%d",&new_price);
        Mocha_price=new_price;
        break;
        default:
        puts("not valid");
        break;

    }
    return 0;
}
